datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

////////////////////////////////
// LOCATIONS
////////////////////////////////
model Location {
  id         Int                                 @id @default(autoincrement())
  lat        Float
  lng        Float
  geom       Unsupported("geometry(Point,4326)")
  zip        String
  address    String
  cityId     Int
  city       City                                @relation(fields: [cityId], references: [id])
  venues     Venue[]
  events     Event[]
  promotions Promotion[]

  @@index([cityId])
  @@index([lat, lng])
}

model CurrencyCode {
  id             Int           @id @default(autoincrement())
  currencyCode   String
  currencySymbol String
  countries      Country[]
  transactions   Transaction[]
}

model TimeZone {
  id            Int    @id @default(autoincrement())
  zoneName      String
  gmtOffset     Int
  gmtOffsetName String
  abbreviation  String
  tzName        String
  cities        City[]
}

model Country {
  id             Int          @id @default(autoincrement())
  country        String
  iso3           String
  currencyCodeId Int
  currencyCode   CurrencyCode @relation(fields: [currencyCodeId], references: [id])
  states         State[]
  cities         City[]
}

model State {
  id        Int     @id @default(autoincrement())
  state     String
  iso2      String
  countryId Int
  country   Country @relation(fields: [countryId], references: [id])
  cities    City[]
}

model City {
  id         Int                                 @id @default(autoincrement())
  city       String
  geom       Unsupported("geometry(Point,4326)")
  countryId  Int
  country    Country                             @relation(fields: [countryId], references: [id])
  stateId    Int?
  state      State?                              @relation(fields: [stateId], references: [id])
  location   Location[]
  timeZoneId Int
  timeZone   TimeZone                            @relation(fields: [timeZoneId], references: [id])
  performers Performer[]

  @@index([city])
}

////////////////////////////////
// Events
////////////////////////////////
model EventCategory {
  id            Int         @id @default(autoincrement())
  eventCategory String
  eventTypes    EventType[]
}

model EventType {
  id              Int            @id @default(autoincrement())
  eventType       String
  eventCategoryId Int?
  eventCategory   EventCategory? @relation(fields: [eventCategoryId], references: [id])
  performers      Performer[]
  events          Event[]

  // Social
  prefferedBy EventTypePreference[]
  followedBy  EventTypeFollower[]

  // music genres
  musicGenres MusicGenre[]
}

model Event {
  id             Int              @id @default(autoincrement())
  venueId        Int
  venue          Venue            @relation(fields: [venueId], references: [id])
  locationId     Int
  location       Location         @relation(fields: [locationId], references: [id])
  title          String
  headline       String
  description    String
  price          Float?
  startDate      DateTime
  endDate        DateTime
  image          String?
  eventTypeId    Int
  ageRestriction Int
  performers     EventPerformer[]
  createdAt      DateTime         @default(now())
  eventType      EventType        @relation(fields: [eventTypeId], references: [id])
  transactions   Transaction[]
  tickets        Ticket[]

  // Analytics
  metrics EventMetric[]

  // Social
  likes EventLike[]
  saves EventSave[]

  @@index([venueId, startDate, eventTypeId])
}

////////////////////////////////
// PROMOTIONS
////////////////////////////////
model PromotionCategory {
  id                Int             @id @default(autoincrement())
  promotionCategory String
  promotionTypes    PromotionType[]
}

model PromotionType {
  id                  Int                @id @default(autoincrement())
  promotionType       String
  promotionCategoryId Int?
  promotions          Promotion[]
  promotionCategory   PromotionCategory? @relation(fields: [promotionCategoryId], references: [id])

  // Social
  prefferedBy PromotionTypePreference[]
  followedBy  PromotionTypeFollower[]
}

model Promotion {
  id              Int           @id @default(autoincrement())
  venueId         Int
  venue           Venue         @relation(fields: [venueId], references: [id])
  locationId      Int
  location        Location      @relation(fields: [locationId], references: [id])
  title           String
  headline        String
  description     String
  startDate       DateTime
  endDate         DateTime
  image           String?
  ageRestriction  Int
  promotionTypeId Int
  createdAt       DateTime      @default(now())
  promotionType   PromotionType @relation(fields: [promotionTypeId], references: [id])

  // Analytics
  metrics PromotionMetric[]

  // Social
  likes PromotionLike[]
  saves PromotionSave[]

  @@index([venueId, startDate, promotionTypeId])
}

////////////////////////////////
// VENUES
////////////////////////////////
model VenueType {
  id        Int     @id @default(autoincrement())
  venueType String
  venues    Venue[]

  // Social
  prefferedBy VenueTypePreference[]
}

model MusicGenre {
  id          Int       @id @default(autoincrement())
  venueId     Int
  venue       Venue     @relation(fields: [venueId], references: [id])
  eventTypeId Int
  eventType   EventType @relation(fields: [eventTypeId], references: [id])

  @@index([venueId])
}

model Venue {
  id             Int          @id @default(autoincrement())
  locationId     Int
  location       Location     @relation(fields: [locationId], references: [id])
  name           String
  address        String
  description    String?
  image          String?
  phoneNumber    String?
  email          String?
  ageRestriction Int
  isOutdoor      Boolean
  isAccessible   Boolean
  events         Event[]
  promotions     Promotion[]
  venueHours     VenueHour[]
  venueTypeId    Int
  createdAt      DateTime     @default(now())
  venueType      VenueType    @relation(fields: [venueTypeId], references: [id])
  musicGenres    MusicGenre[]

  // Analytical
  metrics VenueMetric[]

  // Social
  likes      VenueLike[]
  followedBy VenueFollower[]
  links      VenueLink[]

  @@index([venueTypeId])
  @@index([locationId])
}

model DayOfWeek {
  id         Int         @id @default(autoincrement())
  dayOfWeek  String
  venueHours VenueHour[]
}

model VenueHour {
  id            Int       @id @default(autoincrement())
  venueId       Int
  venue         Venue     @relation(fields: [venueId], references: [id])
  dayOfWeekId   Int
  dayOfWeek     DayOfWeek @relation(fields: [dayOfWeekId], references: [id])
  openingTime   DateTime? @db.Time
  durationHours Int?

  @@unique([venueId, dayOfWeekId])
  @@index([dayOfWeekId])
  @@index([venueId])
}

////////////////////////////////
// Performers
////////////////////////////////
model Performer {
  id          Int     @id @default(autoincrement())
  name        String
  image       String?
  description String
  cityId      Int
  city        City    @relation(fields: [cityId], references: [id])

  events      EventPerformer[]
  eventTypeId Int
  eventType   EventType        @relation(fields: [eventTypeId], references: [id])

  // Analytics
  metrics PerformerMetric[]
  score   Int               @default(0)

  // Social
  likes      PerformerLike[]
  followedBy PerformerFollower[]
  links      PerformerLink[]
}

model EventPerformer {
  id          Int       @id @default(autoincrement())
  eventId     Int
  event       Event     @relation(fields: [eventId], references: [id])
  performerId Int
  performer   Performer @relation(fields: [performerId], references: [id])
  startDate   DateTime
  endDate     DateTime

  @@index([eventId])
  @@index([performerId])
}

////////////////////////////////
// ACCOUNT
////////////////////////////////
// Notifications
////////////////////////////////
model NotificationType {
  id              Int                @id @default(autoincrement())
  notifcationType String
  notifications   UserNotification[]
}

model NotificationFor {
  id              Int                @id @default(autoincrement())
  notificationFor String
  notifications   UserNotification[]
}

model UserNotification {
  id                 Int              @id @default(autoincrement())
  userId             Int
  user               User             @relation(fields: [userId], references: [id])
  notificationForId  Int
  notificationFor    NotificationFor  @relation(fields: [notificationForId], references: [id])
  notificationTypeId Int
  notificationType   NotificationType @relation(fields: [notificationTypeId], references: [id])
}

model User {
  id             Int       @id @default(autoincrement())
  email          String?   @unique
  password       String?
  name           String?
  dateOfBirth    DateTime?
  profileImage   String?
  uuid           String?
  verified       Boolean
  preferencesSet Boolean   @default(false)
  roleId         Int
  role           UserRole  @relation(fields: [roleId], references: [id])
  createdAt      DateTime  @default(now())

  // Clicks
  venueMetrics     VenueMetric[]
  performerMetrics PerformerMetric[]
  eventMetrics     EventMetric[]
  promotionMetrics PromotionMetric[]

  // Social
  venueLikes    VenueLike[]
  performerLike PerformerLike[]
  eventLikes    EventLike[]
  promotionLike PromotionLike[]

  eventSaves     EventSave[]
  promotionSaves PromotionSave[]

  venuesFollowing        VenueFollower[]
  performerFollowing     PerformerFollower[]
  eventTypeFollowing     EventTypeFollower[]
  promotionTypeFollowing PromotionTypeFollower[]

  // Preferences
  venueTypePreferences     VenueTypePreference[]
  eventTypePreferences     EventTypePreference[]
  promotionTypePreferences PromotionTypePreference[]

  notifications UserNotification[]
  transactions  Transaction[]
  tickets       Ticket[]

  @@index([email])
}

////////////////////////////////
// Payments / Tickets
////////////////////////////////
model Ticket {
  id            Int         @id @default(autoincrement())
  uuid          String      @default(uuid())
  userId        Int
  user          User        @relation(fields: [userId], references: [id])
  eventId       Int
  event         Event       @relation(fields: [eventId], references: [id])
  transactionId Int
  transaction   Transaction @relation(fields: [transactionId], references: [id])
}

model PaymentMethod {
  id            Int           @id @default(autoincrement())
  paymentMethod String
  transactions  Transaction[]
}

model PaymentStatus {
  id            Int           @id @default(autoincrement())
  paymentStatus String
  transactions  Transaction[]
}

model Transaction {
  id              Int           @id @default(autoincrement())
  userId          Int
  user            User          @relation(fields: [userId], references: [id])
  eventId         Int?
  event           Event?        @relation(fields: [eventId], references: [id])
  currencyCodeId  Int
  currencyCode    CurrencyCode  @relation(fields: [currencyCodeId], references: [id])
  transactionDate DateTime      @default(now())
  description     String
  paymentMethodId Int
  paymentMethod   PaymentMethod @relation(fields: [paymentMethodId], references: [id])
  paymentStatusId Int
  paymentStatus   PaymentStatus @relation(fields: [paymentStatusId], references: [id])
  tickets         Ticket[]
}

////////////////////////////////
// Auth
////////////////////////////////
model RefreshToken {
  id         Int      @id @default(autoincrement())
  token      String
  userId     Int
  validUntil DateTime

  @@index([userId])
}

model UserRole {
  id       Int    @id @default(autoincrement())
  userRole String
  users    User[]
}

model EmailToken {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  token      String
  expiresAt  DateTime
  resends    Int
  lastSentAt DateTime

  @@index([token])
}

////////////////////////////////
// Analytics
////////////////////////////////
// Clicks
////////////////////////////////
model EngagementType {
  id             Int    @id @default(autoincrement())
  engagementType String

  venueMetrics     VenueMetric[]
  performerMetrics PerformerMetric[]
  eventMetrics     EventMetric[]
  promotionMetrics PromotionMetric[]
}

model EngagementSource {
  id               Int    @id @default(autoincrement())
  engagementSource String

  venueMetrics     VenueMetric[]
  performerMetrics PerformerMetric[]
  eventMetrics     EventMetric[]
  promotionMetrics PromotionMetric[]
}

model VenueMetric {
  id                 Int              @id @default(autoincrement())
  venueId            Int
  venue              Venue            @relation(fields: [venueId], references: [id])
  userId             Int?
  user               User?            @relation(fields: [userId], references: [id])
  duration           Int?
  date               DateTime         @default(now())
  engagementTypeId   Int
  engagementType     EngagementType   @relation(fields: [engagementTypeId], references: [id])
  engagementSourceId Int
  engagementSource   EngagementSource @relation(fields: [engagementSourceId], references: [id])

  @@index([venueId, date])
  @@index([userId])
  @@index([date])
}

model PerformerMetric {
  id                 Int              @id @default(autoincrement())
  performerId        Int
  performer          Performer        @relation(fields: [performerId], references: [id])
  userId             Int?
  user               User?            @relation(fields: [userId], references: [id])
  duration           Int?
  date               DateTime         @default(now())
  engagementTypeId   Int
  engagementType     EngagementType   @relation(fields: [engagementTypeId], references: [id])
  engagementSourceId Int
  engagementSource   EngagementSource @relation(fields: [engagementSourceId], references: [id])

  @@index([performerId, date])
  @@index([userId])
  @@index([date])
}

model EventMetric {
  id                 Int              @id @default(autoincrement())
  eventId            Int
  event              Event            @relation(fields: [eventId], references: [id])
  userId             Int?
  user               User?            @relation(fields: [userId], references: [id])
  duration           Int?
  date               DateTime         @default(now())
  engagementTypeId   Int
  engagementType     EngagementType   @relation(fields: [engagementTypeId], references: [id])
  engagementSourceId Int
  engagementSource   EngagementSource @relation(fields: [engagementSourceId], references: [id])

  @@index([eventId, date])
  @@index([userId])
  @@index([date])
}

model PromotionMetric {
  id                 Int              @id @default(autoincrement())
  promotionId        Int
  promotion          Promotion        @relation(fields: [promotionId], references: [id])
  userId             Int?
  user               User?            @relation(fields: [userId], references: [id])
  duration           Int?
  date               DateTime         @default(now())
  engagementTypeId   Int
  engagementType     EngagementType   @relation(fields: [engagementTypeId], references: [id])
  engagementSourceId Int
  engagementSource   EngagementSource @relation(fields: [engagementSourceId], references: [id])

  @@index([promotionId, date])
  @@index([userId])
  @@index([date])
}

////////////////////////////////
// Likes
////////////////////////////////
model VenueLike {
  id      Int   @id @default(autoincrement())
  venueId Int
  venue   Venue @relation(fields: [venueId], references: [id])
  userId  Int?
  user    User? @relation(fields: [userId], references: [id])

  @@index([venueId])
  @@index([userId])
}

model PerformerLike {
  id          Int       @id @default(autoincrement())
  performerId Int
  performer   Performer @relation(fields: [performerId], references: [id])
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id])

  @@index([performerId])
  @@index([userId])
}

model EventLike {
  id      Int   @id @default(autoincrement())
  eventId Int
  event   Event @relation(fields: [eventId], references: [id])
  userId  Int?
  user    User? @relation(fields: [userId], references: [id])

  @@index([eventId])
  @@index([userId])
}

model PromotionLike {
  id          Int       @id @default(autoincrement())
  promotionId Int
  promotion   Promotion @relation(fields: [promotionId], references: [id])
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id])

  @@index([promotionId])
  @@index([userId])
}

////////////////////////////////
// Following
////////////////////////////////
model VenueFollower {
  id      Int   @id @default(autoincrement())
  venueId Int
  venue   Venue @relation(fields: [venueId], references: [id])
  userId  Int
  user    User  @relation(fields: [userId], references: [id])

  @@index([venueId])
  @@index([userId])
}

model PerformerFollower {
  id          Int       @id @default(autoincrement())
  performerId Int
  performer   Performer @relation(fields: [performerId], references: [id])
  userId      Int
  user        User      @relation(fields: [userId], references: [id])

  @@index([performerId])
  @@index([userId])
}

model EventTypeFollower {
  id          Int       @id @default(autoincrement())
  eventTypeId Int
  eventType   EventType @relation(fields: [eventTypeId], references: [id])
  userId      Int
  user        User      @relation(fields: [userId], references: [id])

  @@index([eventTypeId])
  @@index([userId])
}

model PromotionTypeFollower {
  id              Int           @id @default(autoincrement())
  promotionTypeId Int
  promotionType   PromotionType @relation(fields: [promotionTypeId], references: [id])
  userId          Int
  user            User          @relation(fields: [userId], references: [id])

  @@index([promotionTypeId])
  @@index([userId])
}

////////////////////////////////
// Preferences
////////////////////////////////
model VenueTypePreference {
  id          Int       @id @default(autoincrement())
  venueTypeId Int
  venueType   VenueType @relation(fields: [venueTypeId], references: [id])
  userId      Int
  user        User      @relation(fields: [userId], references: [id])

  @@index([venueTypeId])
  @@index([userId])
}

model EventTypePreference {
  id          Int       @id @default(autoincrement())
  eventTypeId Int
  eventType   EventType @relation(fields: [eventTypeId], references: [id])
  userId      Int
  user        User      @relation(fields: [userId], references: [id])

  @@index([eventTypeId])
  @@index([userId])
}

model PromotionTypePreference {
  id              Int           @id @default(autoincrement())
  promotionTypeId Int
  promotionType   PromotionType @relation(fields: [promotionTypeId], references: [id])
  userId          Int
  user            User          @relation(fields: [userId], references: [id])

  @@index([promotionTypeId])
  @@index([userId])
}

////////////////////////////////
// Saves
////////////////////////////////
model EventSave {
  id      Int   @id @default(autoincrement())
  eventId Int
  event   Event @relation(fields: [eventId], references: [id])
  userId  Int?
  user    User? @relation(fields: [userId], references: [id])

  @@index([userId])
}

model PromotionSave {
  id          Int       @id @default(autoincrement())
  promotionId Int
  promotion   Promotion @relation(fields: [promotionId], references: [id])
  userId      Int?
  user        User?     @relation(fields: [userId], references: [id])

  @@index([userId])
}

////////////////////////////////
// Links
////////////////////////////////
model LinkType {
  id             Int             @id @default(autoincrement())
  linkType       String
  venueLinks     VenueLink[]
  performerLinks PerformerLink[]
}

model VenueLink {
  id         Int      @id @default(autoincrement())
  link       String
  linkTypeId Int
  linkType   LinkType @relation(fields: [linkTypeId], references: [id])
  venueId    Int
  venue      Venue    @relation(fields: [venueId], references: [id])
}

model PerformerLink {
  id          Int       @id @default(autoincrement())
  link        String
  linkTypeId  Int
  linkType    LinkType  @relation(fields: [linkTypeId], references: [id])
  performerId Int
  performer   Performer @relation(fields: [performerId], references: [id])
}
